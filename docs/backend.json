{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["uid", "email"]
    },
    "note": {
      "title": "Note",
      "description": "A note created by a user.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the note."
        },
        "content": {
          "type": "string",
          "description": "The content of the note."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the note."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the note was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the note was last updated."
        }
      },
      "required": ["title", "content", "userId", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/notes/{noteId}": {
      "schema": {
        "$ref": "#/entities/note"
      },
      "description": "A collection of notes."
    }
  }
}